@font-face
  font-family: 'secretchat'
  src:  url('../fonts/secretchat.eot?bqxhmy')
  src:  url('../fonts/secretchat.eot?bqxhmy#iefix') format('embedded-opentype'),
    url('../fonts/secretchat.ttf?bqxhmy') format('truetype'),
    url('../fonts/secretchat.woff?bqxhmy') format('woff'),
    url('../fonts/secretchat.svg?bqxhmy#secretchat') format('svg')
  font-weight: normal
  font-style: normal


[class^="icon-"], [class*=" icon-"]
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'secretchat' !important
  speak: none
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale


.icon-add-friend:before
  content: "\e900"

.icon-exit:before
  content: "\e901"

.icon-message:before
  content: "\e902"

.icon-close:before
  content: "\e903"
